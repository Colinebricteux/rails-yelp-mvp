<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, label: 'Name of the restaurant', error: 'Name is mandatory, please specify one', placeholder: 'Restaurant' %>
  <%= f.input :address, label: 'Address of the restaurant', error: 'Name is mandatory, please specify one', placeholder: 'City, street, number' %>
  <%= f.input :category, label: 'Category of the restaurant (#{CATEGORIES})', error: 'Category is mandatory, please choose from #{CATEGORIES}', placeholder: 'chinese, italian, japanese, french, belgian'  %>
  <%= f.input :category, collection: Restaurant::CATEGORIES %>
  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %></%>
