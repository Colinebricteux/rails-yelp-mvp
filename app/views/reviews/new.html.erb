<h1>Welcome to Yelp !</h1>

<h3>Fill here your review for <%= @restaurant.name %> :</h3>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, label: 'Write here your review :', error: 'This field is mandatory, please specify one', placeholder: 'Yummy yummy !' %>
  <%= f.input :rating, label: 'What is your rating (0 to 5) :', error: 'Rating is mandatory, please specify one', placeholder: '' %>
  <%= f.submit "Add a review", class: "btn btn-primary" %>
<% end %>
